{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["tailwindcss", "node"],
    "jsx": "preserve",

    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.css",
    ".next/types/**/*.ts",
    "src/app/page.tsx",
    "src/app/wallets/near.js",
    "src/app/components/ui/cards.js",
    "src/app/components/ui/navigation.js"
  ],
  "exclude": ["node_modules"]
}
